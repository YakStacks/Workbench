{
  "name": "workbench",
  "version": "2.0.1-dev",
  "description": "Desktop app for task running with AI models and plugin tools",
  "author": "YakStacks",
  "repository": {
    "type": "git",
    "url": "https://github.com/YakStacks/Workbench.git"
  },
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && npm run build:electron && electron . --dev\"",
    "dev:mcp-debug": "npm run build:electron && electron .",
    "build": "vite build && npm run build:electron",
    "build:electron": "tsc main.ts preload.ts storage.ts doctor.ts permissions.ts src/runtime/run-manager.ts src/runtime/process-registry.ts secrets-manager.ts src/runtime/sessions-manager.ts tool-manifest.ts dry-run.ts memory-manager.ts src/runtime/tool-dispatch.ts environment-detection.ts guardrails.ts asset-manager.ts --outDir . --esModuleInterop --module commonjs --strict --skipLibCheck && node build-electron.cjs",
    "typecheck:electron": "tsc -p tsconfig.electron.json --noEmit",
    "start": "electron .",
    "package": "npm run build && electron-builder --win --x64",
    "package:all": "npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2026.1.14",
    "@modelcontextprotocol/server-memory": "^2026.1.26",
    "axios": "^1.13.5",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^2.4.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "uuid": "^9.0.1",
    "youtube-transcript": "^1.2.1"
  },
  "overrides": {
    "ajv": "^8.18.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.2.1",
    "electron": "^29.0.0",
    "electron-builder": "^26.4.0",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "rcedit": "^5.0.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.workbench.app",
    "productName": "Workbench",
    "icon": "icon.ico",
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "doctor.cjs",
      "permissions.cjs",
      "secrets-manager.cjs",
      "tool-manifest.cjs",
      "dry-run.cjs",
      "memory-manager.cjs",
      "environment-detection.cjs",
      "guardrails.cjs",
      "asset-manager.cjs",
      "storage.cjs",
      "src/**/*",
      "plugins/**/*",
      "build/**/*",
      "icon.ico",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "icon.ico",
        "to": "icon.ico"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "icon.ico"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "createDesktopShortcut": true,
      "shortcutName": "Workbench",
      "perMachine": false,
      "oneClick": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  }
}
